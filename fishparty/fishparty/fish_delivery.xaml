<Page
    x:Class="fishparty.fish_delivery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fishparty"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:fishparty"
    mc:Ignorable="d">
    <Page.Resources>
        <ImageBrush x:Key="delivery_truck" ImageSource="/Assets/delivery_truck3.jpg" Opacity="1" Stretch="UniformToFill" />
        <ImageBrush x:Key="round_icon" ImageSource="/Assets/Round_Icon.png" Opacity="1" />
    </Page.Resources>

    <Grid Background="{StaticResource delivery_truck}" x:Name="page_grid">
        <Grid Style="{StaticResource title_grid_style}">
            <Rectangle Style="{StaticResource title_box_style}" Width="774"/>
            <TextBlock Style="{StaticResource title_text_style}">Fish Release</TextBlock>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="147*"/>
                <ColumnDefinition Width="172*"/>
                <ColumnDefinition Width="181*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="54*"/>
            </Grid.RowDefinitions>
        </Grid>
        

        <RelativePanel x:Name="furtherInfo">

            <!-- Vehicles button, shows information about the different delivery methods -->
            <Button 
                    x:Name="vehicles_button" 
                    Background="{StaticResource round_icon}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    BorderThickness="0" 
                    Padding="0"
                    Margin="638,354,-650,-174" 
                    Width="528"
                    Height="528">
                <Button.Flyout>
                    <Flyout>
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <StackPanel>
                            <Image Source="/Assets/Salmon.gif"/>
                            <TextBlock FontSize="24">Info here</TextBlock>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <TextBlock
                    FontSize="25"
                    HorizontalAlignment="Center">
                        <Run Text="Delivery Vehicles"/></TextBlock>
                </StackPanel>
            </Button>

            <!-- Delivery locations button, perhaps shows all of the lakes on a map? -->
            <Button 
                    x:Name="locations_button" 
                    Background="{StaticResource round_icon}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" 
                    BorderThickness="0" 
                    Padding="0" 
                    Margin="214,444,-47,-444" 
                    Width="300"
                    Height="300">
                <Button.Flyout>
                    <Flyout>
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <StackPanel>
                            <Image Source="/Assets/Salmon.gif"/>
                            <TextBlock FontSize="24">Info here</TextBlock>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <TextBlock
                        FontSize="21"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"><Run Text="Delivery Locations"/></TextBlock>
                </StackPanel>
            </Button>

            <!-- Process button, shows information about the process of delivering the fish, (maybe stuff about the chutes?) -->
            <Button
                    x:Name="process_button" 
                    Background="{StaticResource round_icon}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom" 
                    BorderThickness="0" 
                    Padding="0"
                    Margin="1221,0,-1709,-561" 
                    Width="488"
                    Height="488">
                <Button.Flyout>
                    <Flyout>
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <StackPanel>
                            <Image Source="/Assets/Salmon.gif"/>
                            <TextBlock FontSize="24">Info here</TextBlock>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <TextBlock
                    FontSize="28"
                    HorizontalAlignment="Center"><Run Text="Delivery Process"/></TextBlock>
                </StackPanel>
            </Button>

        </RelativePanel>

        <local:navigation_button/>
        <local:home_button/>
        <Button Style="{StaticResource guided_back_button}" Click="prev_page_Click" >
            <StackPanel Orientation="Horizontal">
                <Image Source="{StaticResource back_icon}" Height="50" Width="50"/>
                <TextBlock VerticalAlignment="Center">Oxygen Gen</TextBlock>
            </StackPanel>
        </Button>
        
    </Grid>

</Page>


