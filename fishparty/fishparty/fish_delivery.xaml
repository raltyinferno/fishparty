<Page
    x:Class="fishparty.fish_delivery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fishparty"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:fishparty"
    mc:Ignorable="d">
    <Page.Resources>
        <ImageBrush x:Key="delivery_truck" ImageSource="/Assets/delivery_truck2.png" Opacity="1" Stretch="UniformToFill" />
        <ImageBrush x:Key="round_icon" ImageSource="/Assets/Round_Icon.png" Opacity="1" />
    </Page.Resources>

    <Grid Background="{StaticResource delivery_truck}" x:Name="page_grid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="147*"/>
                <ColumnDefinition Width="172*"/>
                <ColumnDefinition Width="181*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="54*"/>
            </Grid.RowDefinitions>
        </Grid>
        <Grid x:Name="contentPanel" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button Content="Jump to Section" FontSize="20">
                <Button.Flyout>
                    <controls:guided_tour_nav />
                </Button.Flyout>
            </Button>
        </Grid>
        <RelativePanel x:Name="furtherInfo">
            
            <!-- Vehicles button, shows information about the different delivery methods -->
            <Button 
                    x:Name="vehicles_button" 
                    Background="{StaticResource round_icon}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    BorderThickness="0" 
                    Padding="0"
                    Margin="820,544,-704,-236" 
                    Width="400"
                    Height="400">
                <Button.Flyout>
                    <Flyout>
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <StackPanel>
                            <Image Source="/Assets/Salmon.gif"/>
                            <TextBlock FontSize="24">Info here</TextBlock>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <TextBlock
                    FontSize="25"
                    HorizontalAlignment="Center">
                        <Run Text="Delivery Vehicles"/></TextBlock>
                </StackPanel>
            </Button>

            <!-- Delivery locations button, perhaps shows all of the lakes on a map? -->
            <Button 
                    x:Name="locations_button" 
                    Background="{StaticResource round_icon}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" 
                    BorderThickness="0" 
                    Padding="0" 
                    Margin="600,300,-433,-300" 
                    Width="300"
                    Height="300">
                <Button.Flyout>
                    <Flyout>
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <StackPanel>
                            <Image Source="/Assets/Salmon.gif"/>
                            <TextBlock FontSize="24">Info here</TextBlock>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <TextBlock
                        FontSize="21"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"><Run Text="Delivery Locations"/></TextBlock>
                </StackPanel>
            </Button>
            
            <!-- Process button, shows information about the process of delivering the fish, (maybe stuff about the chutes?) -->
            <Button
                    x:Name="process_button" 
                    Background="{StaticResource round_icon}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom" 
                    BorderThickness="0" 
                    Padding="0"
                    Margin="53,0,-553,-560" 
                    Width="500"
                    Height="500">
                <Button.Flyout>
                    <Flyout>
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType="FlyoutPresenter">
                                <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled" />
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>
                        <StackPanel>
                            <Image Source="/Assets/Salmon.gif"/>
                            <TextBlock FontSize="24">Info here</TextBlock>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <TextBlock
                    FontSize="28"
                    HorizontalAlignment="Center"><Run Text="Delivery Process"/></TextBlock>
                </StackPanel>
            </Button>
            
        </RelativePanel>
        <Button x:Name="button" Content="Return Home" HorizontalAlignment="Left" Height="104"  VerticalAlignment="Top" Width="162" Margin="1693,941,0,0" Click="home_Click"/>
    </Grid>

</Page>


