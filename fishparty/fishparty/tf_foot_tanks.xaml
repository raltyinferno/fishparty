<Page
    x:Class="fishparty.tf_foot_tanks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fishparty"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:fishparty"
    mc:Ignorable="d">

    <Page.Resources>
        <ImageBrush x:Key="thirtybgGrid" ImageSource="/Assets/25ft Tank/25ft_oh.jpg" Opacity=".85" Stretch="UniformToFill" />
        <ImageBrush x:Key="round_icon" ImageSource="/Assets/Round_Icon.png" Opacity="1" />
    </Page.Resources>
        
    <Grid Background="{ThemeResource thirtybgGrid}" x:Name="bg_grid">

        <!-- FEEDER BUTTON -->
        <Button Height="100" 
                Width="100" 
                Margin="411,414,0,566"
                Background="{ StaticResource round_icon }"
                x:Name="food_butt"
                Click="food_butt_Click">
            <Button.Flyout>
                <Flyout Placement="Right">
                    <Flyout.FlyoutPresenterStyle>
                        <Style TargetType="FlyoutPresenter">
                            <Setter Property="MinWidth" Value="650"/>
                        </Style>
                    </Flyout.FlyoutPresenterStyle>
                    <Grid>
                        <Image Source="Assets/25ft Tank/25ft_food.jpg" Height="600" Width="600"/>
                    </Grid>
                </Flyout>
            </Button.Flyout>
        </Button>
        <!-- END FEEDER BUTTON -->
        
        <!-- GRAYLING CLOSE UP BUTTON -->
        <Button Height="100" 
                Width="100" 
                Margin="1536,641,0,339"
                Background="{ StaticResource round_icon }"
                x:Name="g_close_butt"
                Click="g_close_butt_Click">
            <Button.Flyout>
                <Flyout>
                    <Flyout.FlyoutPresenterStyle>
                        <Style TargetType="FlyoutPresenter">
                            <Setter Property="MinWidth" Value="650"/>
                        </Style>
                    </Flyout.FlyoutPresenterStyle>
                    <Grid>
                        <Image Source="Assets/25ft Tank/25ft_grayling.jpg" Height="600" Width="600"/>
                    </Grid>
                        
                </Flyout>
            </Button.Flyout>
        </Button>
        <!-- END G CLOSE UP BUTTON -->

        <!-- TANK CLOSE UP BUTTON -->
        <Button Height="50" 
                Width="50" 
                Margin="1596,350,0,630"
                Background="{ StaticResource round_icon }"
                x:Name="t_close_butt"
                Click="t_close_butt_Click">
            <Button.Flyout>
                <Flyout>
                    <Flyout.FlyoutPresenterStyle>
                        <Style TargetType="FlyoutPresenter">
                            <Setter Property="MinWidth" Value="650"/>
                        </Style>
                    </Flyout.FlyoutPresenterStyle>
                    <Grid>
                        <Image Source="Assets/25ft Tank/25ft_close.jpg" Height="650"/>
                    </Grid>
                </Flyout>
            </Button.Flyout>
        </Button>
        <!-- END T CLOSE UP BUTTON -->

        <!-- Title -->
        <Grid Style="{StaticResource title_grid_style}">
            <Rectangle Style="{StaticResource title_box_style}" Width="850"/>
            <TextBlock Style="{StaticResource title_text_style}">30 Foot Tanks</TextBlock>
        </Grid>
        <!-- End Title -->
        
        <!-- navigation sidebar -->
        <Grid  VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="2">
            <Button Content="Jump to Section" FontSize="20">
                <Button.Flyout>
                    <controls:guided_tour_nav/>
                </Button.Flyout>
            </Button>
        </Grid>
        <!-- end navigation sidebar -->

        <!-- Page Buttons -->
        <Button x:Name="tf_filt_butt" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="next_page_Click" Height="180" Width="180">
            <Image Source="Assets/down_arrow.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="270"/>
                </Image.RenderTransform>
            </Image>
        </Button>
        <Button x:Name="tf_six_butt" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="200,0,0,0" Click="prev_page_Click" Height="180" Width="180">
            <Image Source="Assets/down_arrow.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <CompositeTransform Rotation="90"/>
                </Image.RenderTransform>
            </Image>
        </Button>
        <!-- End Page Buttons -->

    </Grid>
</Page>
